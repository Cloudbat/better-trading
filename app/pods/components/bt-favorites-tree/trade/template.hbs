<div local-class="wrapper">
  <div local-class="title">
    {{#unless this.isEditing}}
      <button
        type="button"
        local-class="title-link"
        onclick={{action this.navigateToTrade}}
      >
        {{@trade.title}}
      </button>
    {{else}}
      <BtInlineInput
        @value={{@trade.title}}
        @onCancel={{action this.stopEditing}}
        @onConfirm={{action this.updateTitle}}
      />
    {{/unless}}
  </div>

  <div local-class="actions">
    <button
      type="button"
      local-class="action"
      onclick={{action this.startEditing}}
    >
      <FaIcon @icon="pen" />
    </button>

    <button
      type="button"
      local-class="action"
      onclick={{action @onDelete}}
    >
      <FaIcon @icon="trash-alt" />
    </button>
  </div>
</div>
