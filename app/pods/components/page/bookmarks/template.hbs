<Button
  type="button"
  local-class="create-folder-button"
  @theme="gold"
  @label={{t "page.bookmarks.create-button"}}
  @icon="folder-plus"
  @onClick={{fn this.createFolder}}
/>

<SortableGroup
  local-class="folders-wrapper"
  @tagName="div"
  @model={{this.folders}}
  @onChange={{fn this.reorderFolders}}
  as |group|
>
  {{#each (ranked this.folders) key="id" as |folder|}}
    {{#component
      group.item
      local-class="folder-wrapper"
      tagName="div"
      model=folder
    as |item|
    }}
      <Bookmarks::Folder
        local-class="folder"
        @folder={{folder}}
        @dragHandle={{item.handle}}
        @onEdit={{fn this.handleEdit}}
        @onDelete={{fn this.deleteFolder}}
      />
    {{/component}}
  {{/each}}
</SortableGroup>

{{#if this.stagedFolder}}
  <Bookmarks::FolderEdition
    @folder={{this.stagedFolder}}
    @onCancel={{fn this.unstageFolder}}
    @onSave={{fn this.handleFolderSave}}
  />
{{/if}}
