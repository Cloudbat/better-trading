<Modal
  @title={{t "page.bookmarks.folder.trade-edition.title"}}
  @onClose={{fn @onCancel}}
>
  <Form::Container
    @submitTask={{@submitTask}}
    @entity={{this.trade}}
  >
    <Form::Input
      @label={{t "page.bookmarks.folder.trade-edition.fields.title.label"}}
      @value={{this.trade.title}}
      @autofocus={{true}}
      @onChange={{fn this.changeTitle}}
    />

    <Button
      type="submit"
      @theme="gold"
      @label={{t "page.bookmarks.folder.trade-edition.save"}}
      @icon="save"
    />
  </Form::Container>
</Modal>
